@model WebApplication1.Models.UploadModel

@{
    ViewBag.Title = "Uploader";
}

<h2>Uploader</h2>

<div>
    @using (Html.BeginForm("Uploader", "Uploader", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <span>Navn på Katalog:</span>
        <input type="text" name="name" required><br />
        <span>Select File:</span>
        <input type="file" name="postedFiles" multiple="multiple" required/>
        <hr />
            <input type="submit" value="Upload" />
            <br />
            <span style="color:green">@Html.Raw(ViewBag.Message)</span>
    }
</div>
