
@{
    ViewBag.Title = "Katalog";
}
<style>
    *{
        overflow: hidden;
    }
    #flipbook {
        width: 1152px;
        height: 752px;
    }

    #flipbook .turn-page {
        background-color: #ccc;
        background-size: 100% 100%;
    }
</style>
<div id="flipbook">
    @for (var i = 1; i < ViewBag.pages; i++) {
        string picURL = ViewBag.folder + "/" + i + ".jpg";
    <div><img width="100%" src="~/Content/Uploads/@picURL"></div>
    }
</div>

<script type="text/javascript">

    var $browserwidth = $(window).width();

    if ($browserwidth < 1200) {

    }
    var $eWidth = $browserwidth - 400;

    var $AspectRatio = 794 / 1123;

    var $newHeight = $eWidth * $AspectRatio;

    console.log($eWidth);
    console.log($newHeight);

    $("#flipbook").turn({
        display: "double",
        width: $eWidth,
        height: $newHeight,
        autoCenter: true
    });

    $(window).bind('keydown', function (e) {

        if (e.keyCode == 37)
            $('#flipbook').turn('previous');
        else if (e.keyCode == 39)
            $('#flipbook').turn('next');

    });
</script>